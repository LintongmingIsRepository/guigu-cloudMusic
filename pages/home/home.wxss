/* pages/home/home.wxss */
/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
/* 导航图标区域 */
.navContainer {
  display: flex;
}
.navContainer .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navContainer .navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  color: white;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.navContainer .navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
  padding: 20rpx;
}

/* 内容区 */
.recommendScorll {
  display: flex;
  height: 300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text {
  font-size: 26rpx;
  /* 单行文本溢出隐藏 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设计对齐模式*/
  -webkit-line-clamp: 2;
}
/* 排行榜 */
.topList {
  padding: 20rpx;
}
.topListSwiper {
  height: 450rpx;
}
.swiperItem {
  width: 96%;
  height: 100%;
  background-color: #bfbfbf1e;
  border-radius: 6rpx;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.swiperItem .musicItem {
  display: flex;
  margin-bottom: 20rpx;
}

.swiperItem .musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.swiperItem .musicItem .count {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.swiperItem .musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
}
